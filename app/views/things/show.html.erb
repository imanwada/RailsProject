# <p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @thing.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @thing.description %>
</p>

<p>
  <strong>Picture:</strong>
  
 <%= image_tag(@thing.picture_url, width: 600) if @thing.picture.present? %>
<h3>Comments</h3>
<% @comments.each do |comment| %>
  <div>
    <strong><%= comment.user_name %></strong>
    <br>
    <p><%= comment.body %></p>
    <p><%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %></p>
  </div>
<% end %>
<%= render partial: 'comments/form', locals: { comment: @comment } %>


<h3>Tasks</h3>
<% @tasks.each do |task| %>
  <div>
    <strong><%= task.author %></strong>
    <br>
    <p><%= task.body %></p>
    <p><%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: 'Are you sure?' } %></p>
  </div>
<% end %>
<%= render partial: 'tasks/form', locals: { task: @task } %>


